@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-primary" @onclick="DecrementCount">Click me to see minus</button>
<p> </p>

@* oninput displays numbers as they are typed, onchange requires Enter to submit change first  *@
<input type="number" @bind="userValue" @bind:event="onchange">
<label for="UserInput">You Entered: @userValue</label>

@code {
    private int currentCount = 0;

    [Parameter]
    public int IncrementAmount { get; set; } = 1;
    public int userValue { get; set; } = 1;

    private void IncrementCount()
    {
        currentCount += IncrementAmount;
    }
    private void DecrementCount()
    {
        currentCount -= userValue;
    }
}